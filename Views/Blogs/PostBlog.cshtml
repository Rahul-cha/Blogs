<div class="form-popup" id="myForm">
    <form method="post" asp-action="PostBlog" enctype="multipart/form-data">
        <h1>Create a Post</h1>

       <ul>
           <div class="title">

          
           <li>
                <label for="Title"><b>Title</b></label>
                <br />
                <textarea rows="3" type="text" asp-for="Title" name="Title" style=" width: 300px;" required>
                    </textarea>
               

           </li>
</div>

        <div class="description">
    <li>
        <label for="Description"><b>Description</b></label>
        <br />
        <textarea rows="20" type="text" asp-for="Description" name="Description" style=" width: 300px;
  height: 250px;" required>
        </textarea>
       
    </li>
        </div>
           
        <div class="image">
       
           <li>
                <input asp-for="Image" style=" margin-left:90px; padding:20px"/>
           </li>
</div>

           <li>
                <button type="submit">Submit</button>
           </li>

       </ul>
      
        
       

          <input type="number" value="@ViewBag.Uid" asp-for="UserLoginId" hidden/>

        

      
       @* <button type="button" class="btn cancel" onclick="closeForm()">Close</button>*@
    </form>
</div>


